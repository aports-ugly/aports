# Contributor: stef <l0ls0fo2i@ctrlc.hu>
pkgname=sigrok-cli
pkgver=0.7.0
pkgrel=0
pkgdesc="Sigrok command-line interface"
url="https://www.sigrok.org/wiki/Sigrok-cli"
arch="all"
license="GPL3"
makedepends="glib-dev libsigrok-dev libsigrokdecode-dev"
install=""
subpackages="$pkgname-doc"
source="https://sigrok.org/download/source/$pkgname/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-${pkgver}"

build() {
	cd "$builddir"
	./configure  --prefix=/usr/
	make 
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="c3323fea1a10fb67787e287195c8d7c1a1a47540fb90f6f41ac5f1adc19e1496a0712b41e17253d8e9d269b1da84a9058f0f099cf2ca96dd0201f5c6172e4ff6  sigrok-cli-0.7.0.tar.gz"
