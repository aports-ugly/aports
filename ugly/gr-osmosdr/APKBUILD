pkgname=gr-osmosdr
pkgver=0.1.4.9
pkgrel=0
pkgdesc="Source block for Funcube Dongle, RTL-SDR, USRP, OsmoSDR, BladeRF, HackRF and AirSpy devices"
arch='all'
url="http://sdr.osmocom.org/trac/"
license='GPL'
subpackages="$pkgname-dev"
# libuhd
makedepends='gnuradio-dev boost-dev rtlsdr-dev hackrf-dev cmake python-dev libuhd-dev doxygen swig py-cheetah soapy-sdr-dev graphviz'

#source="http://git.osmocom.org/gr-osmosdr/snapshot/$pkgname-$pkgver.tar.gz"
source="$pkgname-$pkgver.tar.gz::https://github.com/aports-ugly/$pkgname/archive/v$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"

build() {
  cd "$_builddir"
  export PYTHON=python2
  mkdir -p build
  cd build
  cmake \
    -DPYTHON_EXECUTABLE=$(which python2) \
    -DPYTHON_INCLUDE_DIR=$(echo /usr/include/python2*) \
    -DPYTHON_LIBRARY=$(echo /usr/lib/libpython2.*.so) \
    -DCMAKE_INSTALL_PREFIX=/usr -Wno-dev ../
  make
}

package() {
	cd "$_builddir/build"
	make DESTDIR="$pkgdir" install
}
sha512sums="db6af185743285f9083a8b26ecaa9a6daa203ee695cbb8074c93f2049134ee9296520ddbc121a7dc735d5601734bdd2eb10ce1275f59295b6729ca2b700037ff  v0.1.4.9.tar.gz"
