# Contributor: stef <l0ls0fo2i@ctrlc.hu>
#
pkgname=gr-osmosdr
pkgver=0.1.4
pkgrel=0
pkgdesc="Source block for Funcube Dongle, RTL-SDR, USRP, OsmoSDR, BladeRF, HackRF and AirSpy devices"
arch='all'
url="http://sdr.osmocom.org/trac/"
license='GPL'
subpackages="$pkgname-dev"
# libuhd
makedepends='gnuradio-dev boost-dev rtlsdr-dev hackrf-dev'

source="http://git.osmocom.org/gr-osmosdr/snapshot/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"

build() {
  cd "$_builddir"
  export PYTHON=python2
  mkdir -p build
  cd build
  cmake \
    -DPYTHON_EXECUTABLE=$(which python2) \
    -DPYTHON_INCLUDE_DIR=$(echo /usr/include/python2*) \
    -DPYTHON_LIBRARY=$(echo /usr/lib/libpython2.*.so) \
    -DCMAKE_INSTALL_PREFIX=/usr -Wno-dev ../
  make
}

package() {
	cd "$_builddir/build"
	make DESTDIR="$pkgdir" install
}
sha512sums="7a76d98540874b32718f060dca9adfb975978ae321746f3d8f469840bf67025a276e0259a9725e20bf89a554447d9734be70c6a1abe119795e35e18e9b6f797a  gr-osmosdr-0.1.4.tar.gz"
