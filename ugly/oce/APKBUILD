# Contributor:
# Maintainer:
pkgname=oce
pkgver=0.18.3
pkgrel=0
pkgdesc="Open CASCADE community edition"
url="http://github.com/tpaviot/oce"
arch="all"
license="GPL2.1"
depends=""
makedepends="libtbb libtbb-dev gl2ps-dev freeimage-dev tk-dev glu-dev tk"
install=""
subpackages="$pkgname-dev"
source="http://github.com/tpaviot/${pkgname}/archive/OCE-$pkgver.tar.gz
mallinfo.patch
feenableexcept.patch"
builddir="$srcdir/$pkgname-OCE-$pkgver"

build() {
  cd "$builddir"
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DOCE_INSTALL_PREFIX=/usr -DOCE_MULTITHREAD_LIBRARY:STRING=TBB -DOCE_WITH_GL2PS=ON -DOCE_WITH_FREEIMAGE=ON -DOCE_DRAW=ON ..
  make PREFIX="/usr"
}

package() {
  cd "$builddir/build"
  make DESTDIR="$pkgdir" install
}

