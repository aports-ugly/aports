# Contributor: stef <l0ls0fo2i@ctrlc.hu>
#
pkgname=gr-fosphor
pkgver=0.1
pkgrel=0
pkgdesc="GNURadio block for spectrum visualization using GPU"
arch='all'
url="https://osmocom.org/projects/sdr/wiki/fosphor"
license='GPL'
subpackages="$pkgname-dev $pkgname-dbg"
# libuhd
makedepends="boost-dev cppunit-dev doxygen swig python-dev libxrandr-dev glu-dev glfw-dev opencl-icd-loader-dev libxcursor-dev gnuradio-dev qt-dev libxinerama-dev cmake opencl-headers"

source="${pkgname}-${pkgver}.tar.gz::https://github.com/aports-ugly/$pkgname/archive/v$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"

build() {
  cd "$_builddir"
  export PYTHON=python2
  mkdir -p build
  cd build
  cmake \
    -DPYTHON_EXECUTABLE=$(which python2) \
    -DPYTHON_INCLUDE_DIR=$(echo /usr/include/python2*) \
    -DPYTHON_LIBRARY=$(echo /usr/lib/libpython2.*.so) \
    -DCMAKE_INSTALL_PREFIX=/usr -Wno-dev ../
  make
}

package() {
        cd "$_builddir/build"
        make DESTDIR="$pkgdir" install
}
sha512sums="c0e8fe1616be80cf4ea292aaf2f4541ab43b29e527940a0eeaa7ab134138dc31e50eee7805c463b69a30101ddd02c808c0e54b25b78e5bfbdd1dbdb245363f06  gr-fosphor-0.1.tar.gz"
