# Contributor:
# Maintainer:
pkgname=dsdcc
pkgver=1.8.5
pkgrel=0
pkgdesc="Digital Speech Decoder (DSD) rewritten as a C++ library"
url="https://github.com/f4exb/dsdcc"
arch="all"
license="GPLv3"
makedepends="cmake"
subpackages="$pkgname-dev"
source="${pkgname}-${pkgver}.tar.gz::https://github.com/f4exb/$pkgname/archive/v$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"

build() {
  cd "$_builddir"
  mkdir -p build
  cd build
  cmake -DUSE_MBELIB=ON -DCMAKE_INSTALL_PREFIX=/usr -Wno-dev ../
  make VERBOSE=1
}

package() {
        cd "$_builddir/build"
        make DESTDIR="$pkgdir" install
}
sha512sums="da4aefee4e8d31507991b4a21df19858826b39b32820c8060fba21138d3216a8fe0fa2399050ab07383654eddf25696985361a853ef0cba0366957f249b24bee  dsdcc-1.8.5.tar.gz"
