+        static int ubits2sbits(ubit_t *ubits, sbit_t *sbits, int count)
+        {
+            int i;
+
+            for (i = 0; i < count; i++) {
+                if (*ubits == 0x23) {
+                    ubits++;
+                    sbits++;
+                    continue;
+                }
+                if ((*ubits++) & 1)
+                    *sbits++ = -127;
+                else
+                    *sbits++ = 127;
+            }
+
+            return count;
+        }
+
+
+        tch_h_decoder::sptr
+        tch_h_decoder::make(unsigned int sub_channel, std::string multi_rate, bool boundary_check)
