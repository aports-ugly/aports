# Contributor: stef <l0ls0fo2i@ctrlc.hu>

pkgname=rtlsdr
pkgver=0.6.0
pkgrel=0
url="http://sdr.osmocom.org/trac/wiki/rtl-sdr"
arch="all"
license="GPL2"
pkgdesc="turns your Realtek RTL2832 based DVB dongle into a SDR receiver"
makedepends="cmake pkgconf libusb-dev"
source="${pkgname}-${pkgver}.tar.gz::https://github.com/steve-m/lib$pkgname/archive/$pkgver.tar.gz"
subpackages="$pkgname-dev"

builddir="$srcdir/lib$pkgname-$pkgver"

build() {
  cd "$builddir"
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr "$builddir"
  make
}

package() {
	cd "$builddir/build"
	make DESTDIR="$pkgdir" install
	#install rtl-sdr.rules 644 usr/lib/udev/rules.d 53-rtl-sdr.rules
}

sha512sums="a08356a08672f03d86adb662e28923e7998b78c0f49432dc1b1e3844976158c467242e0c5eabf206fd257bdebcf91cd2767dabf13d2ef475f2f3e1d82e23ed75  0.6.0.tar.gz"
