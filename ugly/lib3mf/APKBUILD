pkgname="lib3mf"
pkgver=1.8.1
pkgrel=0
pkgdesc="lib3mf is an implementation of the 3D Manufacturing Format file standard"
arch="all"
url="http://3mf.io/"
license='BSD2'
subpackages="$pkgname-dev $pkgname-dbg"
makedepends="cmake util-linux-dev"

source="${pkgname}-${pkgver}.tar.gz::https://github.com/3MFConsortium/$pkgname/archive/v$pkgver.tar.gz"

build() {
  cd "$builddir"
  mkdir -p build
  cd build
  cmake -DLIB3MF_TESTS=OFF -DCMAKE_INSTALL_PREFIX=/usr -Wno-dev ../
  make VERBOSE=1
}

package() {
        cd "$builddir/build"
        make DESTDIR="$pkgdir" install
        mv $pkgdir/usr/lib64/ $pkgdir/usr/lib/
}
sha512sums="f7fd75bcb6472de1595a018e5add516d0d78ab0aee92462b686b77f8d2bef05270e7b737cb7e1d31fc5850815056e753874c2f9ec456a455e8461c4010fe914a  lib3mf-1.8.1.tar.gz"
