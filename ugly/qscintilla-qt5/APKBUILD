# Contributor:
# Maintainer:
pkgname=qscintilla-qt5
pkgver=2.10.8
pkgrel=0
pkgdesc="Port to Qt5 of Neil Hodgson's Scintilla C++ editor class"
url="http://www.riverbankcomputing.co.uk/software/qscintilla/"
arch="all"
license="GPLv3"
depends=""
makedepends="qt5-qtbase-dev"
install=""
subpackages="$pkgname-dev"
source="https://downloads.sourceforge.net/project/pyqt/QScintilla2/QScintilla-${pkgver}/QScintilla_gpl-${pkgver}.tar.gz"

_builddir="$srcdir/QScintilla_gpl-${pkgver}/Qt4Qt5"

build() {
  cd "$_builddir"
  qmake-qt5 qscintilla.pro || exit 1
  make
}

package() {
	cd "$_builddir"
   make INSTALL_ROOT=${pkgdir} install
}

sha512sums="c0a216737dbda6bc390225196b37a43e4884c9cd67e6e81fc1b1b952683fe88dbfe7caf3c66d94a378f37502e1f08cbdf788426248e73f5f66ec65982b7652b5  QScintilla_gpl-2.10.8.tar.gz"
