# Contributor:
# Maintainer:
pkgname=qscintilla-qt5
pkgver=2.11.1
pkgrel=0
pkgdesc="Port to Qt5 of Neil Hodgson's Scintilla C++ editor class"
url="http://www.riverbankcomputing.co.uk/software/qscintilla/"
arch="all"
license="GPLv3"
depends=""
makedepends="qt5-qtbase-dev"
install=""
subpackages="$pkgname-dev"
source="https://www.riverbankcomputing.com/static/Downloads/QScintilla/$pkgver/QScintilla_gpl-$pkgver.tar.gz"

_builddir="$srcdir/QScintilla_gpl-${pkgver}/Qt4Qt5"

build() {
  cd "$_builddir"
  qmake-qt5 qscintilla.pro || exit 1
  make
}

package() {
	cd "$_builddir"
   make INSTALL_ROOT=${pkgdir} install
}

sha512sums="40b600aa8eec17bc99491a08aeaee72bf498a66f0257d310a8df2667de82805715b9c859885c092acfb03ba8f69433a6517d0d4bb324bf99bd9db461172c08d5  QScintilla_gpl-2.11.1.tar.gz"
