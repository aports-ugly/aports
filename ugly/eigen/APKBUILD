# Maintainer: stef <l0ls0fo2i@ctrlc.hu>

pkgname=eigen
pkgver=3.3.5
pkgrel=0
pkgdesc="C++ template library for linear algebra"
arch="all"
url="http://eigen.tuxfamily.org/"
license="MPL-2.0, GPL-3, LGPL-2.1"
source="http://bitbucket.org/eigen/eigen/get/${pkgver}.tar.bz2"
makedepends="cmake openblas-dev suitesparse-dev qt-dev mpfr-dev fftw-dev boost-dev gmp-dev glu-dev"
subpackages="$pkgname-dev"

builddir="$srcdir/eigen-eigen-b3f3d4950030/"
build() {
  cd "$builddir"
  mkdir -p build
  cd build
  CXXFLAGS="-std=c++11 -g" \
  cmake -DCMAKE_INSTALL_PREFIX=/usr "$builddir"
  make
}

package() {
	cd "$builddir/build"
	make DESTDIR="$pkgdir" install
}

sha512sums="740ed41862c1e422a751b205513754e9c7bd04cc8ad4e3b08e2ccd1c1d30dea43a90896bc8eecd0cb4253b4adf803a814ddd48d6166fb5a53f507cf3e6940a38  3.3.5.tar.bz2"
