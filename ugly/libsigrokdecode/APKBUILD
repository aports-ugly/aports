# Contributor: stef <l0ls0fo2i@ctrlc.hu>
pkgname=libsigrokdecode
pkgver=0.5.2
pkgrel=0
pkgdesc="Protocol decoder lib"
url="https://www.sigrok.org/wiki/Libsigrokdecode"
arch="all"
license="GPL3"
makedepends="python3-dev glib-dev" #libsigrok-dev"
install=""
subpackages="$pkgname-dev"
source="https://sigrok.org/download/source/$pkgname/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-${pkgver}"

build() {
	cd "$builddir"
	./configure  --prefix=/usr/
	make 
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="49d0cba3a5fe17593165c3669dc8530e4e68497369b461f39b63c903f41a3060766c23d44c4112c9b9a5e740ae1e2c03a735494ac798dc631f3913079be04e22  libsigrokdecode-0.5.2.tar.gz"
