# Contributor: stef <l0ls0fo2i@ctrlc.hu>
#
pkgname=soapy-sdr
pkgver=0.7.1
pkgrel=0
pkgdesc="Vendor and platform neutral SDR support library."
arch='all'
url="https://github.com/pothosware/SoapySDR/wiki"
license='custom'
subpackages="$pkgname-dev $pkgname-dbg $pkgname-doc"
# libuhd
makedepends="cmake"

source="https://github.com/pothosware/SoapySDR/archive/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir/SoapySDR-$pkgname-$pkgver"

build() {
  cd "$_builddir"
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -Wno-dev ../
  make
}

package() {
        cd "$_builddir/build"
        make DESTDIR="$pkgdir" install
}
sha512sums="9b2c4251d6362faecf770df021b74e3b387b99699ae4f7d3f145801e2acc901a3803f7b4d2cd50267013f1add6658703dfa5db6db28b8a645f1f8230117123cd  soapy-sdr-0.7.1.tar.gz"
