# Contributor: stef <l0ls0fo2i@ctrlc.hu>

pkgname=kicad
pkgver=5.0.1
pkgrel=0
makedepends="python-dev glew-dev cairo-dev openssl-dev boost-dev swig doxygen curl-dev cmake wxgtk-dev glew-dev glm-dev ngspice-dev oce-dev libtbb libtbb-dev" 
pkgdesc="Electronic schematic and PCB design software"
license="GPL2"
url="http://kicad-pcb.org"
source="https://launchpad.net/${pkgname}/${pkgver%.*}/${pkgver}/+download/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-doc $pkgname-dbg"

builddir="$srcdir/$pkgname-$pkgver"
build() {
  cd "$builddir"
  mkdir -p build
  cd build
  CXXFLAGS="-std=c++11 -g" \
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DKICAD_BUILD_VERSION=$pkgver -DKICAD_SKIP_BOOST=ON \
        -DKICAD_SCRIPTING=ON -DKICAD_SCRIPTING_MODULES=ON  -DKICAD_SCRIPTING_WXPYTHON=OFF \
        "$builddir"
  make
}

package() {
	cd "$builddir/build"
	make DESTDIR="$pkgdir" install
	mv $pkgdir/usr/lib64/kicad $pkgdir/usr/lib/
	mv $pkgdir/usr/lib64/libkicad_3dsg.so $pkgdir/usr/lib/
	mv $pkgdir/usr/lib64/libkicad_3dsg.so.2.0.0 $pkgdir/usr/lib/
	rmdir $pkgdir/usr/lib64/
}

sha512sums="36f591fe82c2c2da21581ec9425cf3c179839b20ea9db9e2d406220406e9daef6052d29202b4f0fe4fdab73434009626f66ce803e81e7a7dae4df9ea93ed896d  kicad-5.0.1.tar.xz"
