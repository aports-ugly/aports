# Contributor: stef <l0ls0fo2i@ctrlc.hu>
pkgname=kicad
pkgver=5.1.4
pkgrel=0
makedepends="python3-dev glew-dev cairo-dev openssl-dev boost-dev swig doxygen curl-dev cmake wxgtk-dev glew-dev glm-dev ngspice-dev oce-dev libtbb libtbb-dev" 
pkgdesc="Electronic schematic and PCB design software"
license="GPL2"
arch="all"
url="http://kicad-pcb.org"
source="https://launchpad.net/${pkgname}/5.0/${pkgver}/+download/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-doc"

builddir="$srcdir/$pkgname-$pkgver"
build() {
  cd "$builddir"
  mkdir -p build
  cd build
  export PYTHON=python3
  CXXFLAGS="-std=c++11 -g" \
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DPYTHON_EXECUTABLE=$(which python3) \
        -DPYTHON_INCLUDE_DIR=$(echo /usr/include/python3*) \
        -DPYTHON_LIBRARY=$(echo /usr/lib/libpython3.*.so) \
        -DKICAD_SCRIPTING_PYTHON3=ON \
        -DKICAD_SCRIPTING=ON -DKICAD_SCRIPTING_MODULES=ON  -DKICAD_SCRIPTING_WXPYTHON=OFF \
        "$builddir"
  make #VERBOSE=1
}

package() {
	cd "$builddir/build"
	make DESTDIR="$pkgdir" install
	mv $pkgdir/usr/lib64/kicad $pkgdir/usr/lib/
	mv $pkgdir/usr/lib64/libkicad_3dsg.so $pkgdir/usr/lib/
	mv $pkgdir/usr/lib64/libkicad_3dsg.so.2.0.0 $pkgdir/usr/lib/
	rmdir $pkgdir/usr/lib64/
}

sha512sums="ce0efb740686eafdbbdf8cda68ad800a70c8991302f984be3db4bbdb3bfafe1634871ec6ea26bb6854a417db6336880e5a043dc022ef8126c0e98abc90671337  kicad-5.1.4.tar.xz"
