# Contributor: stef <l0ls0fo2i@ctrlc.hu>
#
pkgname="serialDV"
pkgver=1.1.2
pkgrel=0
pkgdesc="C++ Minimal interface to encode and decode audio with AMBE3000 based devices in packet mode over a serial link."
arch="all"
url="https://github.com/f4exb/serialDV"
license='MIT'
subpackages="$pkgname-dev $pkgname-dbg"
makedepends="cmake boost-dev"

source="${pkgname}-${pkgver}.tar.gz::https://github.com/f4exb/$pkgname/archive/v$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"

build() {
  cd "$_builddir"
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -Wno-dev ../
  make VERBOSE=1
}

package() {
        cd "$_builddir/build"
        make DESTDIR="$pkgdir" install
        mv $pkgdir/usr/lib64/ $pkgdir/usr/lib/
}
sha512sums="fe6a5e0f78b13649043fb20f45c893ebe1aeb29b3f27637f03a3e799e10ee0894acd177734fa896dfaa4f55070f45b2f2a368a7fc7f655bfeb0b7645c267837a  serialDV-1.1.2.tar.gz"
