# Contributor: stef <l0ls0fo2i@ctrlc.hu>
pkgname=liquid-dsp
pkgver=1.3.1
pkgrel=0
pkgdesc="digital signal processing library for software-defined radios"
url="http://liquidsdr.org/"
arch="all"
license="MIT"
makedepends="automake autoconf fftw-dev"
subpackages="$pkgname-dev"
source="${pkgname}-${pkgver}.tar.gz::https://github.com/jgaeddert/$pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-${pkgver}"

build() {
	cd "$builddir"
   ./bootstrap.sh
	./configure  --prefix=/usr/
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="6da76030fc346e3fadfe70e72be14d1f2ff198d3e9bb5ffb5f4d9b89945686d2474d3bb4911a2b923aad22feabebf2744d47afbffabab87737fe46a24af68917  v1.3.1.tar.gz"
