# Maintainer: stef <l0ls0fo2i@ctrlc.hu>

pkgname=dwdiff
pkgver=2.1.0
pkgrel=0
pkgdesc="dwdiff is a diff program that operates at the word level instead of the line level."
arch="all"
url="http://os.ghalkes.nl/dwdiff.html"
license="GPLv3"
source="http://os.ghalkes.nl/dist/$pkgname-$pkgver.tar.bz2"
subpackages="$pkgname-doc"
_builddir="$srcdir/$pkgname-$pkgver"

prepare() {
   default_prepare || return 1
}

build() {
  cd "$_builddir"
  ./configure --without-gettext --prefix=/usr
  make
}

package() {
  cd "$_builddir"
  make DESTDIR="$pkgdir" install
}

sha512sums="63e5ea3ae510c84fa2353da55bbc3cfac3a3753e1cebfb42c387218289a5e19d8e68af663181720a55eca05e49ef075db7d5dafda9dc4d57b9af503553ae9021  dwdiff-2.1.0.tar.bz2"
